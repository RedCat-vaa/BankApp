<UserControl x:Class="BankApp.Views.Sum"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:BankApp.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <GroupBox FontSize="16" FontWeight="Bold" Header="Остаток" Height="50" BorderBrush="DarkViolet"  
                  BorderThickness="2" Width="200" Margin="5,5,5,5" HorizontalAlignment="Left">
            <StackPanel Orientation="Horizontal">
                <TextBlock x:Name="Ostatok" VerticalAlignment="Center" 
                            FontSize="16" Text="{Binding Path=Ostatok}" Margin="5,5,5,5"></TextBlock>
            </StackPanel>
        </GroupBox>
    </Grid>
</UserControl>
